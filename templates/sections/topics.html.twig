<div class="wdiv-topics-wrapper">
    <header class="wdiv-topics-header">
        <div class="wdiv-topics-heading">
            <div class="wdiv-topics-heading-container">
                <h1 class="wdiv-topics-heading-title tl--gamma wdiv-serif cp--h1 center-column wdiv-max-width-1190">Unsere Themen</h1>
            </div>
        </div>
        <div class="clearfix cp--h1 center-column wdiv-max-width-1190">
        <div class="wdiv-topics-filter wdiv-clearfix">
            {% for id, topic in topics %}
                <p class="wdiv-topics-filter-col">
                    <input type="radio" value="{{id}}" id="wdiv-topic-filter-{{id}}" name="wdiv-topic-filter">
                    <label class="wdiv-topics-filter-option" for="wdiv-topic-filter-{{id}}"><span class="wdiv-topics-filter-indicator"></span>{{ topic.title }}</label>
                </p>
            {% endfor %}
            <p class="wdiv-topics-filter-col">
                <button class="wdiv-topics-filter-reset">Alle Projekte anzeigen</button>
            </p>
        </div>
        </div>
    </header>
    <div class="clearfix cp--h1 center-column wdiv-max-width-1190">
    <div class="wdiv-topics-content">
        <div class="wdiv-topic-header">
        {% for id, topic in topics %}
            <div class="wdiv-topic wdiv-topic-{{id}}" data-topic-id="{{id}}">
                <div class="wdiv-topic-desc">{{ topic.desc | raw }}</div>
                <h2 class="wdiv-topic-title">Projekte aus dem Bereich {{ topic.title }}</h2>
            </div>
        {% endfor %}
        </div>
        <div class="wdiv-projects wdiv-clearfix">
        {% for project in projects %}
            <div class="wdiv-project {% if project.type is defined %}wdiv-project-{{project.type}}{% endif %}" data-topic-id="{{project.topic}}">
                <img class="wdiv-project-img" src="{{ project.image }}">
                <h2 class="wdiv-project-title">{{ project.title }}</h2>
                <h3>{{ topics[project.topic].title }}</h3>
                <p>{{ project.body | raw }}</p>
            </div>
        {% endfor %}
        </div>
    </div>
    </div>
</div>
